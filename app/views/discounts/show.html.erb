<div class="page-header">
  <%= link_to discounts_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_discount_path(@discount), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show discount</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @discount.name %></dd>

  <dt>Discount:</dt>
  <dd><%= @discount.discount %></dd>

  <dt>Promo:</dt>
  <dd><%= @discount.promo %></dd>

  <dt>Old price:</dt>
  <dd><%= @discount.old_price %></dd>

  <dt>New price:</dt>
  <dd><%= @discount.new_price %></dd>

  <dt>Big Image:</dt>
  <dd><%= image_tag(@discount.big_image_url(:thumb)) %></dd>

  <dt>Image:</dt>
  <dd><%= image_tag(@discount.image_url(:thumb)) %></dd>

  <dt>Logo:</dt>
  <dd><%= image_tag(@discount.logo_url(:thumb)) %></dd>

  <dt>Text:</dt>
  <dd><%= @discount.text %></dd>

  <dt>Color:</dt>
  <dd><%= @discount.color %></dd>

  <dt>Discount category:</dt>
  <dd><%= @discount.discount_category.title %></dd>

</dl>
