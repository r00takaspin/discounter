<div class="page-header">
  <%= link_to new_discount_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Новая скидка
  <% end %>
  <h1>Список скидок</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Название</th>
            <th>Картинка</th>
            <th>Текст</th>
            <th>Категория</th>
            <th></th>
            <th></th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @discounts) do |discount| %>
            <td><%= discount.name %></td>
            <td><img src="<%= discount.image_url(:thumb) %>" style="width: 200px"></td>
            <td><%= raw(discount.text) %></td>
            <td><%= discount.discount_category ? discount.discount_category.title : '---' %></td>
            <td><%= link_to 'Show', discount %></td>
            <td><%= link_to 'Edit', edit_discount_path(discount) %></td>
            <td><%= link_to 'Destroy', discount, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
